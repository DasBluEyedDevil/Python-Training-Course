                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <Label fx:id="progressLabel" text="0% Complete" styleClass="progress-label"/>
                    <ProgressBar fx:id="progressBar" progress="0" prefWidth="200"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="subtitle-bar">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
                <Label fx:id="moduleTitle" text="Select a module to begin" styleClass="module-title">
                    <font>
                        <Font size="16"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Left: Module Navigation -->
    <left>
        <VBox styleClass="sidebar" prefWidth="300" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="ðŸ“š Course Modules" styleClass="sidebar-title">
