                        <Label text="â€¢ Progress tracking and quizzes" wrapText="true"/>
                        <Label text="â€¢ From absolute beginner to job-ready developer" wrapText="true"/>
                    </VBox>
                </VBox>
            </ScrollPane>

            <!-- Navigation Buttons -->
            <HBox alignment="CENTER" spacing="20" styleClass="navigation-bar">
                <padding>
                    <Insets top="10" bottom="0"/>
                </padding>
                <Button fx:id="prevLessonBtn" text="â† Previous Lesson" styleClass="nav-button"/>
                <Button fx:id="markCompleteBtn" text="âœ“ Mark Complete" styleClass="complete-button"/>
                <Button fx:id="nextLessonBtn" text="Next Lesson â†’" styleClass="nav-button"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
